function makeCommentTab() {
  // Get the article element
  const article = document.querySelector('article');
  // Create the tab element
  const tab = document.createElement('div');
  tab.id = 'comments-tab';
  tab.innerHTML = 'Comments';
  // Get the comments element
  const comments = document.getElementById('comments');
  // Add the tab to the article element
  article.appendChild(tab);
  // Add a click event listener to the tab
  tab.addEventListener('click', () => {
    // Toggle the 'open' class on the comments element
    comments.classList.toggle('open');
  });
}