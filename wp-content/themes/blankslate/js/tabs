function makeCommentTab() {
  // Get the article and comments elements
  var article = document.querySelector('article');
  var comments = document.getElementById('comments');

  // Create the tab element
  var tab = document.createElement('div');
  tab.id = 'comments-tab';
  tab.innerHTML = 'Comments';
  tab.addEventListener('click', function() {
    // Toggle the 'open' class on the comments element
    comments.classList.toggle('open');
  });

  // Append the tab to the article element
  article.appendChild(tab);
}
